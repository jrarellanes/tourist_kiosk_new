<%- model_class = PlacesInterest -%>
<div class="page-header">
  <h1><%= @places_interest.name %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @places_interest.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @places_interest.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:horary) %>:</strong></dt>
  <dd><%= @places_interest.horary %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @places_interest.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:latitude) %>:</strong></dt>
  <dd><%= @places_interest.latitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:longitude) %>:</strong></dt>
  <dd><%= @places_interest.longitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:popularity) %>:</strong></dt>
  <dd><%= @places_interest.popularity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:idClasification) %>:</strong></dt>
  <dd><%= @places_interest.idClasification %></dd>
  <dd><strong><%= model_class.human_attribute_name(:urlImage) %>:</strong></dd>
  <dd><img src="<%=@places_interest.urlImage %>"/></dd>
  <dd><strong>Mapa</strong></dd>
  <dd><%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@places_interest.latitude}%2C#{@places_interest.longitude}" %></dd>


</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              places_interests_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_places_interest_path(@places_interest), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              places_interest_path(@places_interest),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
