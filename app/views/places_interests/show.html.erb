<%- model_class = PlacesInterest -%>
<div class="page-header">
  <h1><%= @places_interest.name %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @places_interest.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @places_interest.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:horary) %>:</strong></dt>
  <dd><%= @places_interest.horary %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd align = "justify">  <%= @places_interest.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:latitude) %>:</strong></dt>
  <dd><%= @places_interest.latitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:longitude) %>:</strong></dt>
  <dd><%= @places_interest.longitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:popularity) %>:</strong></dt>
  <dd><%= @places_interest.popularity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:idClasification) %>:</strong></dt>
  <dd><%= @places_interest.idClasification %></dd>
  <dd><strong><%= model_class.human_attribute_name(:urlImage) %>:</strong></dd>
  <dd><img src="<%=@places_interest.urlImage %>"/></dd>
  <dd><strong>Mapa</strong></dd>
  <dd><%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@places_interest.latitude}%2C#{@places_interest.longitude}" %></dd>
      </dl>
</dl></br></br></br>
<h3>Fotos compartidas por los visitantes</h3>
  <% @images.each do |image| %>

  <div class="imageRow" style="float: left">
      <div class="set">
        <div class="single">
          <table border="1">
            <tr>
              <td><a href="<%=image.pic.url() %>" rel="lightbox[roadtrip]"><img src="<%=image.pic.url() %>" width="200" height="100" /></a>
              </td>
            </tr>
          </table>
        </div>
      </div>
 </div>
<%end%>

<div class="span10">
  </br></br></br><center>
  <%= link_to "Regresar",
              places_interests_path, :class => 'btn btn-primary'  %>
  <%= link_to 'Registra tu visista',
              register_path(@places_interest), :method => 'register',:class => 'btn btn-primary' %>
  <% if (current_user.role == "Administrador") %>
  <%= link_to 'Editar',
              edit_places_interest_path(@places_interest), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              places_interest_path(@places_interest),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
      <%end%>
    </center>
  </br></br>
  </div>