<%= form_for @preference, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :iduser, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :iduser, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :idsite, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :idsite, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :dateRegister, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :dateRegister, :class => 'date_select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                preferences_path, :class => 'btn' %>
  </div>
<% end %>
